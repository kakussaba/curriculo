$white = #FFFFFF
$darkGray = #A9A9A9
$lightPink = #ffb6c1
$black = #555555

body
  color $black
  font-family 'Ubuntu', 'Open Sans', 'Sans Serif' !important

.shadow-bg
  -webkit-transition all 0.3s
  -moz-transition all 0.3s
  -ms-transition all 0.3s
  -o-transition all 0.3s
  transition all 0.3s
  -webkit-box-shadow:0 1px 6px rgba(0, 0, 0, 0.10), 0px 1px 6px rgba(0, 0, 0, 0.20)
  -moz-box-shadow 0 1px 6px rgba(0, 0, 0, 0.10), 0px 1px 6px rgba(0, 0, 0, 0.20)
  box-shadow 0 1px 6px rgba(0, 0, 0, 0.10), 0px 1px 6px rgba(0, 0, 0, 0.20)

#header
  height 400px
  background-color $lightPink

#about
  margin-top -250px

  .about-box
    padding 40px
    background $white

    .about-personal, .about-data-wrapper
      margin-bottom 60px

      .about-photo
        display block
        margin 0 auto;
        border-radius 50%

      .about-name
        text-align center
        margin-top 15px
        text-transform uppercase
        font-weight 700
        font-size 30px
        letter-spacing 5px

      .about-title
        text-align center
        font-size 12px !important
        font-weight 600
        text-transform uppercase
        letter-spacing 3px
        padding 15px 0

      .about-section-title
        font-size 24px
        font-weight 700
        letter-spacing 5px
        text-transform uppercase
        position relative
        line-height 1.7
        color $darkGray

      .about-section-title::after, .service-title::after, .timeline-title::after
        display inline-block
        content ''
        position absolute
        bottom -10px
        left 0
        width 70px
        height 3px
        background $lightPink
        border-radius 30px

      .about-data
        margin: 30px 0 0

        p
          font-size 15px
          line-height 1.8
          font-weight 400
          margin-bottom 0

        div
          margin-top 20px
          font-size 14px

          span
            width 80px
            display inline-block
            font-weight 700

        div:first-of-type
          margin-top 30px !important

    .about-social
      background $lightPink
      width 100%
      height 75px
      line-height: 75px
      position absolute
      left 0
      bottom 0
      text-align center
      margin-top 0 !important

      a
        text-align center
        color #ffffff
        font-size 20px
        position relative
        display inline-block
        width 50px
        height 50px
        line-height 50px
        margin 10px
        -webkit-border-radius 50%
        -moz-border-radius 50%
        border-radius 50%
        -webkit-transition all 0.5s;
        -moz-transition all 0.5s
        -o-transition all 0.5s

      a:hover
        background $white

        i
          color $lightPink

#education, #experience, #skills
  margin-top 60px

  .section-title
    h2
      font-size 28px
      font-weight 700
      letter-spacing 5px
      color #555555
      text-transform uppercase
      text-align center
      margin 40px 0 0

  .section-content
    padding 50px
    margin-top 50px

    .list-description
      h6
        font-weight 700
        font-size 20px

      span
        font-weight 600
        margin-bottom 10px
        display block

      p
        font-weight 300
        font-size 14px

    .list-img
      img
        margin-top 10px

      .experience-date
        width 100%
        z-index 1
        background $lightPink
        text-align center
        -webkit-transition 0.4s
        transition 0.4s

        h6
          padding 33% 11%
          color #fff
          font-weight 600
          font-size 14px

#skills
  .service-wrapper
    margin-top 50px
    margin-bottom 50px

    .skill
      padding 40px
      min-height 205px

      .service-center
        padding 0 40px
        position absolute
        width 100%
        top 50%
        left 50%
        opacity 1
        visibility visible
        -webkit-transform translate(-50%, -50%)
        -moz-transform translate(-50%, -50%)
        -ms-transform translate(-50%, -50%)
        -o-transform translate(-50%, -50%)
        transform translate(-50%, -50%)
        -webkit-transition all 0.5s
        -moz-transition all 0.5s
        -ms-transition all 0.5s
        -o-transition all 0.5s
        transition all 0.5s

        .service-icon
          font-size 28px
          padding-bottom 15px
          text-align center
          color $lightPink

        .service-title
          font-size 16px
          font-weight 600
          letter-spacing 3px
          text-transform uppercase
          line-height 1.5
          text-align center

        .service-title::after
          display block
          content ''
          margin 18px auto 0
          width 50px
          height 3px
          background $lightPink
          border-radius 30px

    .service-desc
      opacity 0
      visibility hidden
      -webkit-transform scale(0.5)
      -moz-transform scale(0.5)
      -ms-transform scale(0.5)
      -o-transform scale(0.5)
      transform scale(0.5)
      -webkit-transition all 0.5s
      -moz-transition all 0.5s
      -ms-transition all 0.5s
      -o-transition all 0.5s
      transition all 0.5s
      text-align center

      p
        font-size 15px
        line-height 1.8
        font-weight 400
        margin-bottom

  .service-wrapper:hover
    .service-center
      opacity 0
      visibility hidden

    .service-desc
      opacity 1
      visibility visible
      -webkit-transform scale(1)
      -moz-transform scale(1)
      -ms-transform scale(1)
      -o-transform scale(1)
      transform scale(1)